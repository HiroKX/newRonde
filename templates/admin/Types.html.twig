{% extends 'base.html.twig' %}
{% block body %}
    <div class="mx-auto w-75">
        <div class="mb-2">
            <h2>Modification des types</h2>
            <p> Gérer les différents type créer</p>
            <a class="btn btn-outline-primary" href="{{ path('type_new') }}">Créer un type</a>
            <a href="{{ path('admin_index')}}" class="btn btn-primary">Retour</a>
        </div>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Code</th>
                <th scope="col">Nom</th>
                <th scope="col">Action(s)</th>
            </tr>
            </thead>
            <tbody>
            {% for type in types %}
                <tr>
                    <th scope="row">{{ type.code }}</th>
                    <td>{{ type.nom }}</td>
                    <td><a href="{{ path('type_edit', {'code': type.code}) }}" class="btn btn-warning">Modifier</a>
                        {{ include('type/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('admin_index')}}" class="btn btn-primary">Retour</a>
    </div>
{% endblock %}