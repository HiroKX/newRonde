{% extends 'base.html.twig' %}
{% block body %}
    <div class="mx-auto w-75">
        <div>
            <div class="mb-2">
                <h2>Modification des archives</h2>
                <p> Gérer les différents archives créer</p>
                <a class="btn btn-outline-primary" href="{{ path('archive_new') }}">Créer une archive</a>
                <a href="{{ path('admin_index')}}" class="btn btn-primary">Retour</a>
            </div>
        </div>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Denomination</th>
                <th scope="col">Année</th>
                <th scope="col">Action(s)</th>
            </tr>
            </thead>
            <tbody>
            {% for archive in archives %}
                <tr>
                    <th scope="row">{{ archive.id }}</th>
                    <td>{{ archive.denom }}</td>
                    <td>{{ archive.annee }}</td>
                    <td><a href="{{ path('archive_edit', {'id': archive.id}) }}" class="btn btn-warning">Modifier</a>
                        {{ include('archive/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('admin_index')}}" class="btn btn-primary">Retour</a>
    </div>
{% endblock %}

