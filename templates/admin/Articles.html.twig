{% extends 'base.html.twig' %}
{% block body %}
    <div class="mx-auto w-75">
        <div class="mb-2">
            <h2>Modification des articles</h2>
            <p> Gérer les différents articles créer</p>
            <a class="btn btn-outline-primary" href="{{ path('article_new') }}">Créer un Article</a>
            <a href="{{ path('admin_index')}}" class="btn btn-primary">Retour</a>
        </div>
<table class="table">
    <thead>
    <tr>
        <th scope="col">Titre</th>
        <th scope="col">Types</th>
        <th scope="col">Année</th>
        <th scope="col">Action(s)</th>
    </tr>
    </thead>
    <tbody>
{% for article in articles %}
    <tr>
        <th scope="row">{{ article.titre }}</th>
        <td>{{ article.type.nom }}</td>
        <td>{{ article.annee.annee}}</td>
        <td><a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-warning">Modifier</a>
            {{ include('article/_delete_form.html.twig') }}
        </td>
    </tr>
{% endfor %}
    </tbody>
</table>
        <a href="{{ path('admin_index')}}" class="btn btn-primary">Retour</a>
    </div>
{% endblock %}