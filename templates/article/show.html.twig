{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
        <div class="mx-auto w-75 align-items-center article">
            {% if (article is defined) %}
                <h3>{{ article.titre }}</h3>
                <h5>{{ article.utitre }}</h5>
                <div>{{ article.contenu | raw }}</div>
                <ul class="">
                    {% for attachment in article.attachments %}
                        <li><a href="{{ path('article_download_attachment', {'id': attachment.id}) }}">
                                Document a télécharger : {{ attachment.originalFilename }}
                            </a></li>
                    {% endfor %}
                </ul>
            {% endif %}
            <div class="image-carousel">
            {% for image in article.images %}
            <div class="slick-slider">
                <img src=" {{ asset(pathArticleAttachment ~ image.filename) }}" alt="{{ image.originalFilename }}"/>
            </div>
            {% endfor %}
            </div>
            {% for image in article.images %}
                    <img class="img-carousel" src=" {{ asset(pathArticleAttachment ~ image.filename) }}" alt="{{ image.originalFilename }}"/>
            {% endfor %}
            <div class="mt-2">
                <a href="{{ path('article_index') }}" class="btn btn-primary">Retour</a>
                {% if app.user %}
                    <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-warning ">Modifier l'article</a>
                    {{ include('article/_delete_form.html.twig') }}
                {% endif %}
            </div>

        </div>
    <div class="carousel-hidden">
    <div class="big-carousel d-none">
        {% for image in article.images %}
            <div class="slick-slider">
                <img src=" {{ asset(pathArticleAttachment ~ image.filename) }}" alt="{{ image.originalFilename }}"/>
            </div>
        {% endfor %}
    </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('carousel') }}
{% endblock %}
