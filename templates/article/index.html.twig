{% extends 'base.html.twig' %}

{% block body %}
<div class="mx-auto col-12 col-lg-9">
    {{ render(controller('App\\Controller\\IndexController::lastArticle')) }}
    <hr class="my-4" />
    <div class="w-50 mx-auto bg-light mb-2" >
        <select class="btn btn-default mx-auto w-100 dropdown-toggle" id="selector-type" data-toggle="dropdown">
            <option value="all">Tous</option>
            {% for type in types %}
                <option value="{{ type.code }}">{{ type.nom }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="row" id="containerArticle" >
        {{ include('article/ajax_article.html.twig', {'articles': articles}) }}
    </div>
    <button class="btn btn-outline-primary d-block mx-auto" id="btn-load">Charger plus d'articles</button>
</div>
{% endblock %}
